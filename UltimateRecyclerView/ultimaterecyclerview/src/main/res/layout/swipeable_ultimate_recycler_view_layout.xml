<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.marshalchen.ultimaterecyclerview.ui.VerticalSwipeRefreshLayout
        android:id="@id/urv_vertical_swiperefresher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.marshalchen.ultimaterecyclerview.swipelistview.SwipeListView
            android:id="@id/urv_core"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true" />

    </com.marshalchen.ultimaterecyclerview.ui.VerticalSwipeRefreshLayout>

    <RelativeLayout
        android:id="@id/urv_empty_view_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>